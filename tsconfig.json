{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./lib/**/*"],
  "exclude": ["node_modules", "build", "**/*.spec.ts", "**/*.spec.js"]
}
